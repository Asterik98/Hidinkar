<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sakit.SelectedPenyakitFragment">


    <android.support.design.card.MaterialCardView
        android:id="@+id/detail_penyakit_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_corner_large"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jenis_penyakit_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:text="Nama Penyakit"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/margin_small"/>

            <TextView
                android:id="@+id/keterangan_penyakit_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:text="Apa itu ?"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/keterangan_penyakit_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textAlignment="center"
                android:padding="@dimen/padding_small"
                android:text="-"/>

            <TextView
                android:id="@+id/pencegahan_penyakit_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:text="Bagaimana mencegahnya ?"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/pencegahan_penyakit_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textAlignment="center"
                android:padding="@dimen/padding_small"
                android:text="-"/>
            <TextView
                android:id="@+id/gejala_penyakit_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:text="Gejalanya apa ?"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/gejala_penyakit_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textAlignment="center"
                android:padding="@dimen/padding_small"
                android:text="-"/>
            <TextView
                android:id="@+id/perawatan_penyakit_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:text="Tindakan Awal"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/perawatan_penyakit_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textAlignment="center"
                android:padding="@dimen/padding_small"
                android:text="-"/>

            <TextView
                android:id="@+id/dokter_penyakit_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:text="Dokter yang bisa menangani"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/dokter_penyakit_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textAlignment="center"
                android:padding="@dimen/padding_small"
                android:text="-"/>

        </LinearLayout>
    </android.support.design.card.MaterialCardView>


</ScrollView>